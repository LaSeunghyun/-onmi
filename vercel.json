{
  "version": 2,
  "routes": [
    {
      "src": "/api/cron/crawl",
      "dest": "api/cron/crawl.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/crawl",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "PYTHONPATH": ".:backend/shared:backend/api-gateway/src"
  },
  "functions": {
    "api/index.py": {
      "runtime": "@vercel/python",
      "maxDuration": 30
    },
    "api/cron/crawl.py": {
      "runtime": "@vercel/python",
      "maxDuration": 300
    }
  },
  "regions": ["icn1"]
}

